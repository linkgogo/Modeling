   5 set tabstop=7       "自訂縮排的位元數"
   6 set shiftwidth=7
   7 set foldenable      "摺疊"
   8 set foldmethod=indent
   9 set foldcolumn=1
  10 set foldlevel=5
  11 set hlsearch        "用反白顯示搜尋字"
